<Page
    x:Class="CityApp.Views.Companies"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:CityApp.ViewModels"
    xmlns:datamodel="using:CityApp.DataModel"
    xmlns:helpers="using:CityApp.Helpers"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <vm:CompaniesViewModel/>
    </Page.DataContext>
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="Companies" FontSize="48" HorizontalAlignment="Center"/>
                <GridView 
            ItemsSource="{Binding Companies}" 
            IsItemClickEnabled="True"
            helpers:ItemClickCommand.Command="{Binding CompanyDetailsCommand}">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Name}" FontSize="48"/>
                                <TextBlock Text="{Binding Categorie}" FontSize="24"/>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </ScrollViewer>
</Page>
